<% layout("/layouts/boilerplate") -%>
<div class="row mt-2">
    <div class="col-8 offset-2" >
    <h2>Create a New Listing</h2>
    <br>
    <form action="/listings" method="POST">
        <div class="mb-2">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="l[title]" placeholder="enter title" class="form-control"><br><br>
        </div>
        <div class="mb-2">
            <label for="description" class="form-label">Description</label>
            <textarea name="l[description]" placeholder="enter description" class="form-control"></textarea><br><br>
        </div>
        <div class="mb-2">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="l[image]" placeholder="enter image URL" class="form-control"><br><br>
        </div>
        <div class="row">
            <div class="mb-2 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="text" name="l[price]" placeholder="enter price" class="form-control"><br><br>
            </div>
            <div class="mb-2 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="l[country]" placeholder="enter country" class="form-control"><br><br>
            </div>
        </div>
        <div class="mb-2">
           <label for="location" class="form-label">Location</label>
            <input type="text" name="l[location]" placeholder="enter location" class="form-control"><br><br>
        </div>
        <button class="btn btn-dark add-btn">Add</button>
        <br><br>
    </form>
</div>
</div>
