<% layout("/layouts/boilerplate") -%>
<body>
    <h1>All Listings</h1>
    <br>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(listings of list){ %>
        <a href="/listings/<%=listings._id%>" class="listing-link">
        <div class="card col">
            <img src="<%=listings.image%>" class="card-img-top" alt="listingimage" style="height: 18rem;">
            <div class="card-img-overlay"></div>
            <div class="card-body">
            <p class="card-text">
                <b><%=listings.title%></b><br>
                &#x20b9;<%= listings.price.toLocaleString("en-IN")%>
            </p>
            </div>
        </div>
    </a>
    <%}%>
    </div>
</body>

